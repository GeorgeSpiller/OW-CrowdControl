

void MakeTextForNumberOfSeconds(define seconds, String text)
{
    CreateHudText(
        VisibleTo: AllPlayers(),
        Header   : IconString(Icon.Bolt),
        Text     : text,
        TextColor: Color.SkyBlue
    );

    define HUDTextID = LastTextID();

    Wait(seconds);

    DestroyHudText(HUDTextID);
}


